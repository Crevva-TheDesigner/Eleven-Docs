rules_version = '2';

function isAdmin() {
  return request.auth.token.email == 'the.designer.crevva@gmail.com';
}

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow list: if isAdmin();

      match /orders/{orderId} {
        allow create: if request.auth.uid == userId;
        // Read access is now handled by the collection group rule below.
        allow update, delete: if false;
      }
    }
    
    // This rule allows a user to read their own orders, and an admin to read all orders.
    // This is used for both direct document access and the admin's collection group query.
    match /{path=**}/orders/{orderId} {
      allow read: if (request.auth.uid == path[1]) || isAdmin();
    }

    match /generated_content/{productId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow list: if isAdmin();
      allow update, delete: if false;
    }

    match /subscriptions/{subscriptionId} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if false;
    }

    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && (productId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.purchaseHistory);
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /feedbacks/{feedbackId} {
      allow create: if true;
      allow read, list: if isAdmin();
      allow update, delete: if false;
    }
  }
}
